<Page x:Class="RobotInterface.TroubleShootingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RobotInterface"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TroubleShootingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="100*"/>

            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="50.017"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>

        <GroupBox Header="Reception" Foreground="#ffffff" Background="#23233b"   Grid.Column="0" Grid.Row="1" Margin="0,0,0,20" Grid.RowSpan="2">
            <TextBlock x:Name="TextBoxReception" Foreground="#ffffff" TextWrapping="Wrap"  Background="{x:Null}"/>
        </GroupBox>
        <GroupBox Header="Emission" Foreground="#ffffff" BorderBrush="Black" Background="#2a332c" Grid.Column="0" Grid.Row="0" Margin="0,0,0,200" Grid.RowSpan="2"  >
            <TextBox x:Name="TextBoxEmission" TextWrapping="Wrap" Foreground="#ffffff" IsReadOnly="False" Background="{x:Null}" BorderBrush="{x:Null}" TextChanged="TextBoxReception_TextChanged" UndoLimit="0"/>
        </GroupBox>


        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Left"  Width="330" Grid.Row="4" Margin="235,0,0,0">
            <Button x:Name="boutonEnvoyer" Foreground="White" Content="Send"  Height="30" Width="100" Margin="5" Background="#800000" Click="BoutonEnvoyer_Click_1" />
            <Button x:Name="boutonClear" Foreground="White" Content="Clear" Height="30" Width="100" Margin="5" Background="#800000" Click="boutonClear_Click"/>
            <Button x:Name="boutonTest"  Foreground="White" Content="Test"  Height="30" Width="100" Margin="5" Background="#800000" Click="boutonTest_Click"/>
            
        </StackPanel>
            
        <Grid Grid.ColumnSpan="3" Margin="0,6,0,4" Grid.Row="2" Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*" />


                <ColumnDefinition Width="200*" />
                <ColumnDefinition Width="200*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="distCheckBox" Foreground="#ffffff" Content="Distance frontale"  Grid.Column ="1" Checked="DisplayModeCheckBox_Checked" Unchecked ="DisplayModeCheckBox_Unchecked" VerticalAlignment="Center" Height="14" />
            <CheckBox x:Name="posCheckBox"  Foreground="#ffffff" Content="Position"  Grid.Column ="2" VerticalAlignment="Center" Checked="DisplayModeCheckBox_Checked" Unchecked ="DisplayModeCheckBox_Unchecked" Height="15"/>
            <CheckBox x:Name="speedCheckBox" Foreground="#ffffff" Content="Vitesse" Grid.Column ="3"  VerticalAlignment="Center" Checked="DisplayModeCheckBox_Checked" Unchecked ="DisplayModeCheckBox_Unchecked" Height="15" />
            <CheckBox x:Name="textCheckBox" Foreground="#ffffff" Content="Text"  Grid.Column="0" VerticalAlignment="Center" Checked="DisplayModeCheckBox_Checked"  Unchecked ="DisplayModeCheckBox_Unchecked" Height="15"/>


        </Grid>



    </Grid>

</Page>
