<Window x:Class="RobotInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oscilloDir="clr-namespace:PolarChartControl;assembly=WpfOscilloscopeControl"
        xmlns:oscilloSpeed="clr-namespace:WpfOscilloscopeControl;assembly=WpfOscilloscopeControl"
        xmlns:oscillo="clr-namespace:WpfOscilloscopeControl;assembly=WpfOscilloscopeControl"
        xmlns:ext="clr-namespace:WpfWorldMap;assembly=WpfWorldMap"
        xmlns:local="clr-namespace:RobotInterface" xmlns:ext1="clr-namespace:WpfWorldMap_NS;assembly=WpfWorldMap"
        xmlns:AsservDisplay="clr-namespace:WpfAsservissementDisplay;assembly=WpfAsservissementDisplay"
        Background="Black"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <TabControl>
        <TabItem Header="Onglet1"  Background="Black">
            <Grid Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Reception" Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" Foreground="#ffffff" Background="#23233b" >
                    <TextBlock x:Name="TextBoxReception" Foreground="#ffffff" TextWrapping="Wrap"  Background="{x:Null}"/>
                </GroupBox>
                <GroupBox Header="Emission" Grid.Column="0" Grid.Row="0" Grid.RowSpan="1"  Foreground="#ffffff" BorderBrush="Black" Background="#2a332c">
                    <TextBox x:Name="TextBoxEmission" TextWrapping="Wrap" Foreground="#ffffff" IsReadOnly="False" Background="{x:Null}" BorderBrush="{x:Null}" TextChanged="TextBoxReception_TextChanged" UndoLimit="0"/>
                </GroupBox>
                <GroupBox Header="OscilloSPD" Grid.Column="1" Grid.Row="0" Grid.RowSpan="1" Foreground="#ffffff" Background="#23233b" >
                    <oscillo:WpfOscilloscope x:Name="oscilloSpeed"/>
                </GroupBox>
                <GroupBox Header="Map" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" Foreground="#ffffff" Background="#23233b" >
                    <ext1:WpfWorldMap x:Name="worldMapDisplay"/>
                </GroupBox>
                <GroupBox Header="Tableau" Grid.Column="0" Grid.Row="2" Grid.RowSpan="1" Foreground="#ffffff" Background="#23233b" >
                    <AsservDisplay:AsservissementRobot2RouesDisplayControl x:Name="asservSpeedDisplay"/>
                </GroupBox>


                <Grid Grid.Row="3" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="textCheckBox"  Grid.Column="0" HorizontalAlignment="Center" Foreground="#ffffff" Content="Text" VerticalAlignment="Center" Checked="DisplayModeCheckBox_Checked"  Unchecked ="DisplayModeCheckBox_Unchecked"/>
                    <CheckBox x:Name="distCheckBox" Grid.Column ="1" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="#ffffff" Content="Distance frontale"  Checked="DisplayModeCheckBox_Checked" Unchecked ="DisplayModeCheckBox_Unchecked"/>
                    <CheckBox x:Name="posCheckBox"  Grid.Column ="2"  Foreground="#ffffff" Content="Position"  VerticalAlignment="Center" Checked="DisplayModeCheckBox_Checked" Unchecked ="DisplayModeCheckBox_Unchecked"/>
                    <CheckBox x:Name="speedCheckBox" Grid.Column ="3" Foreground="#ffffff" Content="Vitesse"  VerticalAlignment="Center" Checked="DisplayModeCheckBox_Checked" Unchecked ="DisplayModeCheckBox_Unchecked"  />
                   
                </Grid>

                
                

                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center">
                    <Button x:Name="boutonEnvoyer" Foreground="White" Content="Send"  Height="30" Width="100" Margin="5" Background="#800000" Click="BoutonEnvoyer_Click_1" />
                    <Button x:Name="boutonClear" Foreground="White" Content="Clear" Height="30" Width="100" Margin="5" Background="#800000" Click="boutonClear_Click"/>
                    <Button x:Name="boutonTest"  Foreground="White" Content="Test"  Height="30" Width="100" Margin="5" Background="#800000" Click="boutonTest_Click"/>

                </StackPanel>

                



            </Grid>
        </TabItem>

        <TabItem Header="Onglet2" Background="Black">
            <Grid Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                
                
            </Grid>
        </TabItem>
     
    </TabControl>
    

</Window>
